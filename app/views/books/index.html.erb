<!DOCTYPE html>
<html>
  <body>
    
    <p id="notice"><%= flash[:notice] %></p>

  <h1>Books</h1>

   
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show", book_path(book.id) %></td>
          <td><%= link_to "Edit", edit_book_path(book.id) %></td>
          <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
    
  
  <h2>New book</h2>

    <%= form_with model: @book do |f| %>
      
      <div id="<%= "error_explanation" if @book.errors.any? %>">
        <% if @book.errors.any? %>
        <h2><%= @book.errors.count %> error prohibited this book from being saved:</h2>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
    
      <div class="field">
        <div class="<%= "field_with_errors" if @book.errors.any? %>">
          <label for="book_title">Title</label>
        </div>
          <%= f.text_field :title %>
      </div>
      
      <div class="field">
        <div class="<%= "field_with_errors" if @book.errors.any? %>">
          <label for="book_body">Body</label>
        </div>
          <%= f.text_area :body %>
      </div>
  
      <div class="action">
        <%= f.submit 'Create Book' %>
      </div>

    <% end %>
  </body>
</html>
  