<!DOCTYPE html>
<html>
  
  <body>
    <h1>Editing Book</h1>
    
    <form>
      <%= form_with model: @books, url: book_path(@books.id), method: :patch do |f| %>
      <div class="field">
        <label for="book_title">Title</label>
        <%= f.text_field :title %>
      </div>
  
      <div class="field">
        <label for="book_body">Body</label>
        <%= f.text_area :body %>
      </div>
  
      <div class="actions">
        <%= f.submit 'Update Book' %>
      </div>
      <% end %>
  
    </form>
      <%= link_to "Show", book_path(@books.id) %>
       | 
      <%= link_to "Back", books_path %>
  </body>
</html>