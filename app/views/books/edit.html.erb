<!DOCTYPE html>
<html>
  
  <body>
    <h1>Editing Book</h1>
    
      <div id="<%= "error_explanation" if @book.errors.any? %>">
        <% if @book.errors.any? %>
        <h2><%= @book.errors.count %> error prohibited this book from being saved:</h2>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
    
      <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
    <form>
      
      <div class="field">
        <div class="<%= "field_with_errors" if @book.errors.any? %>">
          <label for="book_title">Title</label>
        </div>
          <%= f.text_field :title %>
      </div>
  
      <div class="field">
        <div class="<%= "field_with_errors" if @book.errors.any? %>">
          <label for="book_body">Body</label>
        </div>
          <%= f.text_area :body %>
      </div>
  
      <div class="actions">
        <%= f.submit 'Update Book' %>
      </div>
      
    </form>
      <% end %>
      <%= link_to "Show", book_path(@book.id) %>
       | 
      <%= link_to "Back", books_path %>
  </body>
</html>